[
    {
        "description": "dependencies",
        "schema": {
            "dependencies": {"bar": ["foo"]}
        },
        "tests": [
            {
                "description": "neither",
                "data": {},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "nondependant",
                "data": {"foo": 1},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "with dependency",
                "data": {"foo": 1, "bar": 2},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "missing dependency",
                "data": {"bar": 2},
                "valid": false,
                "error_count": 1
            },
            {
                "description": "ignores non-objects",
                "data": "foo",
                "valid": true,
                "error_count": 0
            }
        ]
    },
    {
        "description": "multiple dependencies",
        "schema": {
            "dependencies": {"quux": ["foo", "bar"]}
        },
        "tests": [
            {
                "description": "neither",
                "data": {},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "nondependants",
                "data": {"foo": 1, "bar": 2},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "with dependencies",
                "data": {"foo": 1, "bar": 2, "quux": 3},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "missing dependency",
                "data": {"foo": 1, "quux": 2},
                "valid": false,
                "error_count": 1
            },
            {
                "description": "missing other dependency",
                "data": {"bar": 1, "quux": 2},
                "valid": false,
                "error_count": 1
            },
            {
                "description": "missing both dependencies",
                "data": {"quux": 1},
                "valid": false,
                "error_count": 2
            }
        ]
    },
    {
        "description": "multiple dependencies subschema",
        "schema": {
            "dependencies": {
                "bar": {
                    "properties": {
                        "foo": {"type": "integer"},
                        "bar": {"type": "integer"}
                    }
                }
            }
        },
        "tests": [
            {
                "description": "valid",
                "data": {"foo": 1, "bar": 2},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "no dependency",
                "data": {"foo": "quux"},
                "valid": true,
                "error_count": 0
            },
            {
                "description": "wrong type",
                "data": {"foo": "quux", "bar": 2},
                "valid": false,
                "error_count": 2
            },
            {
                "description": "wrong type other",
                "data": {"foo": 2, "bar": "quux"},
                "valid": false,
                "error_count": 2
            },
            {
                "description": "wrong type both",
                "data": {"foo": "quux", "bar": "quux"},
                "valid": false,
                "error_count": 3
            }
        ]
    }
]
